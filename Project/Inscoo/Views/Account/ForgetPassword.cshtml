@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>忘记密码</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/base")
    @Styles.Render("~/Content/index")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/base")
</head>
<body>
    <div class="contain" style="overflow-y:visible ">
        <div class="slider">
            <div class="floor floor1">
                <div class="box">
                    <div class="hello">
                        <span class="fontGreen">Hi 我是保酷</span><br>
                        <span class="fontBlack">您企业的健康与保险专家</span>
                    </div>
                    <div class="loginWrp">
                        <h4>找回密码</h4>
                        @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
                        {
                            <hr />
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <p style="float: left; line-height: 30px; height: 30px">邮箱：</p>

                                <input type="email" id="email" name="email" required class="form-control" style="height:30px;float:left;width:80%" />
                                @if (ViewBag.Error != null)
                                {
                                    <p class="text-center" style="line-height: 30px; height: 30px; color: red;margin-bottom: 30px">@ViewBag.Error</p>
                                }
                            </div>
                            <div class="text-center">
                                <input type="submit" class="btn btn-success" value="提交" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/index")
</body>
</html>
