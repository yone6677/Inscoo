@model Models.ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>忘记密码</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/base")
    @Styles.Render("~/Content/index")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/base")
    <style>
        input {
            height: 30px;
            width: 80%;
        }

            input[type=submit] {
                height: 30px;
                text-align: center;
                width: 40%;
            }

        label {
            float: right;
            line-height: 30px;
            height: 30px;
        }
    </style>
</head>
<body>
    <div class="contain" style="overflow-y:visible ">
        <div class="slider">
            <div class="floor floor1">
                <div class="box">
                    <div class="hello">
                        <span class="fontGreen">Hi 我是保酷</span><br>
                        <span class="fontBlack">您企业的健康与保险专家</span>
                    </div>
                    <div class="loginWrp" style="width: 400px;">
                        <h4>重置密码</h4>
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <h4>重置你的密码。</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Code)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-center">
                                    <input type="submit" class="btn btn-success" value="提交" />
                                </div>
                            </div>
                        }
                        @*@using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
                            {
                                <hr />
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <p style="float:left;line-height:30px;height:30px">邮箱：</p>
                                    <input type="email" id="email" name="email" required class="form-control" style="height:30px;float:left;width:80%" />
                                </div>
                            }*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/index")
</body>
</html>
</body>
</html>
