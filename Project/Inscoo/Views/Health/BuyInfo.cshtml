@model Models.vCheckProductDetail
@{
    ViewBag.Title = "BuyInfo";
}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <img src="@Model.CheckProductPic" />
        </div>

        <div class="col-lg-6">
            <p>@Model.ProductName</p>
            <div>仅售￥@Model.PrivilegePrice 市场价：@Model.PublicPrice</div>
            @Html.ActionLink("购买", "MakeSure", new { id = @Model.Id }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
