@using Models
@model List<Models.VCheckProductList>
@{
    ViewBag.Title = "体检详细信息";
}
@{
    VCheckProductDetail product = ViewBag.Product;
}
<div class="health_box">
    <div class="health_box_header">
        <ul class="">
            <li class="header_left">
                <img src="@product.CheckProductPic" />
            </li>
            <li class="header_right">
                <h3><span>@product.ProductName</span></h3>
                <ul>
                    <li>仅售：<b>￥@Convert.ToInt32(product.PrivilegePrice)</b></li>
                    <li>市场价：<span>￥@Convert.ToInt32(product.PublicPrice) </span></li>
                </ul>
                <div class="col-xs-10 col-xs-offset-1 text-left">
                    @foreach (var item in Model)
                    {
                        <div class="col-xs-5">
                            @Html.RadioButton("rbCompanyName", item.Id, item.Id == product.Id) @Html.ActionLink(item.CompanyName, "BuyInfo", new { item.ProductType, item.Id, item.ProductName }, new { })
                        </div>
                    }
                </div>
                @Html.Action("buyDetail", new { productId = product.Id, product.ProductName, product.ProductType })
            </li>
        </ul>
    </div>
    @Html.Partial("detail/_ProDetail_" + product.Id, product)
</div>
@section Scripts {
    <script>
        jQuery(function () {
            jQuery("#aMakeSure").click(function () {

            });
            MakeSure

        });

    </script>
}