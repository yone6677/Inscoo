@model Models.VHealthConfirmPayment

@{
    ViewBag.Title = "确认付款";
}
<div class="orderConfirm">
    <ul class="orderConfirmLi">
        <li style="width: 33%">
            <i class="fa fa-save fa-2x"></i>
            <span>方案确认</span>
        </li>
        <li style="width: 33%">
            <i class="fa fa-edit fa-2x"></i>
            信息填写
        </li>
        <li class="orderConfirmLiActive" style="width: 33%">
            <i class="fa fa-usd fa-2x"></i>
            确认付款
        </li>
    </ul>
</div>
<div class="confirmPayment">
    <ul>
        <li></li>
        <li>订单信息</li>
    </ul>
    @if (Model.prodList.Any())
    {
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().PublicPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().PrivilegePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().Count)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.prodList.FirstOrDefault().SubTotal)
                </th>
            </tr>

            @foreach (var item in Model.prodList)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PublicPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PrivilegePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.SubTotal)
                    </td>
                </tr>
            }
        </table>
    }
</div>
<div class="confirmPayment">
    <ul>
        <li></li>
        <li>支付信息</li>
    </ul>
    <dl>
        <dt>
            账户名 :
        </dt>
        <dd>
            上海皓为商务咨询有限公司
        </dd>
        <dt>
            银行账号 :
        </dt>
        <dd>
            1001213909200135268
        </dd>
        <dt>
            开户行 :
        </dt>
        <dd>
            中国工商银行武进路支行
        </dd>
        <dt>
            营业执照 :
        </dt>
        <dd>
            <a href="~/Archive/Template/yyzz.jpg" target="_blank">查看</a>
        </dd>
    </dl>
    <p>
        <span style="margin-bottom:10px; font-size: 1.5em;color:red">下单结束，请下载付款通知书</span>
        <a href="@Model.PaymentNoticePdf" target="_blank">下载付款通知书</a>
    </p>
</div>
<div class="orderConfirmBodyNext" style="text-align:center;">
    @Html.ActionLink("上一步", "EntryInfo", new { ticks = Model.Ticks }, new { @class = "btn btn-primary", style = "background-color: #38A6D9;border-color: #38A6D9 " })
    @Html.ActionLink("完成", "AuditListSearch", new { }, new { @class = "btn btn-primary", style = "background-color: #38A6D9;border-color: #38A6D9 " })
</div>