@model IEnumerable<Models.VCheckProductDetail>
@{
    ViewBag.Title = "方案确认";
}
@section head {
    <style>
        .form-group {
            margin: 25px auto;
        }

        .orderConfirmBodyNext {
            margin-top: 25px;
        }

        li {
            width: 33%;
        }
    </style>
}
<div class="orderConfirm">
    <ul class="orderConfirmLi">
        <li class="orderConfirmLiActive" style="width: 33%">
            <i class="fa fa-save fa-2x"></i>
            <span>方案确认</span>
        </li>
        <li style="width: 33%">
            <i class="fa fa-edit fa-2x"></i>
            信息填写
        </li>
        <li style="width: 33%">
            <i class="fa fa-usd fa-2x"></i>
            确认付款
        </li>
    </ul>
</div>

<table class="table table-bordered table-header-blur">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.PublicPrice)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.PrivilegePrice)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Count)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.SubTotal)
        </th>
    </tr>
    @{
        if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PublicPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PrivilegePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.SubTotal)
                    </td>
                </tr>
            }
        }
    }
</table>
