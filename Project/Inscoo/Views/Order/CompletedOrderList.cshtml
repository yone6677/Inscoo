@model IEnumerable<Models.Order.OrderListModel>

<table class="table table-bordered table-style-control">
    <tr style="background-color:#24A9E4;color:#fff;">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnnualExpense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuranceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateDesc)
        </th>
        <th>
            保险期间
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            操作
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Order/Details/@item.Id">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateDesc)
            </td>
            <td>
                @if (item.StartDate != DateTime.MinValue)
                {
                    var dt = item.StartDate.ToShortDateString();
                    if (item.EndDate != DateTime.MinValue)
                    {
                        <span>@dt</span><span>- @item.EndDate.ToShortDateString()</span>
                    }
                    else
                    {
                        <span>@dt</span>
                    }
                }
            </td>
            <td>
                @{
                    var CreateDate = item.CreateDate.ToShortDateString();
                    <span>@CreateDate</span>
                }
            </td>
            <td>
                @{
                    if (item.State == 7)
                    {
                        @Ajax.ActionLink("删除订单", "Delete", new { id = item.Id, oType = 3 }, new AjaxOptions { HttpMethod = "post", Confirm = "确定要删除该数据？", UpdateTargetId = "dadaGrid" }, new { @style = "color:green" })
                        <span>|</span>
                    }
                    if (item.State == 6 && item.BatchState == 5)
                    {
                        @Html.ActionLink("加减保", "BuyMore", new { id = item.Id }); <span>|</span>
                    }
                    if (item.State == 6 && item.BatchState == 0)
                    {
                        @Html.ActionLink("确认信息", "BuyMore", new { id = item.Id }); <span>|</span>
                    }
                    if (item.State == 6 && item.BatchState == 8 || item.BatchState == 1 || item.BatchState == 3)
                    {
                        <span>审核中</span><span>|</span>
                    }
                    <a href="/Order/Details/@item.Id">查看详情</a>
                }
            </td>
        </tr>
                    }

</table>
@{
    PageCommand command = ViewBag.pageCommand;
    @Html.Pager(command)
}
