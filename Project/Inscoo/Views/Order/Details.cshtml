@section Scripts {
    <script>
        $(function () {
            $("#CollectionDate")
                .datepicker({
                    endDate: '@DateTime.Now.ToShortDateString()'
                });
        });
        function checkFile(e) {
            var UploadEmpInfoPdf = $("#UploadEmpInfoPdfError");
            var UploadPolicyPdfSealError = $("#UploadPolicyPdfSealError");
            var empFile = $("#EmpInfoPdfSeal").val();
            var ppFile = $("#PolicyPdfSeal").val();
            var s = parseInt(e);
            if (e == 1) {
                console.log(empFile);
                if (empFile == '') {
                    UploadEmpInfoPdf.text("未选择任何文件！");
                    return false;
                }
                pf = (empFile.substring(empFile.lastIndexOf(".") + 1, empFile.length)).toLowerCase();
                if (pf == 'zip' || pf == 'rar') {
                    return true;
                } else {
                    UploadEmpInfoPdf.text("员工名单只能上传压缩文件，请压缩后再重新上传！");
                }
            }
            if (e == 2) {
                if (ppFile == '') {
                    UploadPolicyPdfSealError.text("未选择任何文件！");
                    return false;
                }
                pf = (ppFile.substring(ppFile.lastIndexOf(".") + 1, ppFile.length)).toLowerCase();
                if (pf == 'zip' || pf == 'rar') {
                    return true;
                } else {
                    UploadPolicyPdfSealError.text("投保单只能上传压缩文件，请压缩后再重新上传！");
                }
            }
            return false;
        }

        function togglePage(e) {
            var target = e.target || e.srcElement;
            if (target.nodeName == "A") {
                target = target.parentNode;
            }
            if (target.nodeName == "LI") {
                var text = $(target).children().html();
                var t = $("[id^='id_']");
                for (var i = 0; i < t.length; i++) {
                    $(t[i]).removeClass("inscoo").css("display", 'none');
                    $(t[text - 1]).css("display", "block").addClass("inscoo");
                }
            }
        }
        $(function () {
            $("[id^='id_']").css("display", 'none');
            $("#id_1").css("display", "block").addClass("inscoo");

            $("#nav-pagination").on("click", togglePage);
        })

        $(".toggle_switch").on("click", function () {
            $(this).parent().next().slideToggle();
            $(this).toggleClass("text-content-extend");
        });
        $(function () {
            $(".toggle_switch_1").on("click", function () {
                $(".inscoo").slideToggle();
                $(this).toggleClass("fa-hand-o-down");
            });
        })
    </script>
