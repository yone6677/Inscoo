@model IEnumerable<Models.Order.OrderListModel>

<table class="table table-bordered">
    <tr style="background-color:#24A9E4;color:#fff;">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnnualExpense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuranceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        var cssClass = "";
        if (item.State < 3)
        {
            cssClass = "active";
        }
        else
        {
            cssClass = "success";
        }
        <tr class=@cssClass>
            <td>
                <a href="/Order/Details/@item.Id">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @switch (item.State)
                {
                    case 1:
                        <span>方案已确认</span>;
                        break;
                    case 2:
                        <span>人员已上传</span>;
                        break;
                    case 3:
                        <span>信息已上传</span>;
                        break;
                    case 4:
                        <span>付款通知书已下载</span>;
                        break;
                    case 5:
                        <span></span>;
                        break;

                }
            </td>
            <td>
                @if (item.StartDate == DateTime.MinValue)
                {
                    <span style="color:#ff6a00">未确认</span>
                }
                else
                {
                    <span>@item.StartDate.ToShortDateString()</span>
                }              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Cancel", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
@{
    PageCommand command = ViewBag.pageCommand;
    @Html.Pager(command)
}
