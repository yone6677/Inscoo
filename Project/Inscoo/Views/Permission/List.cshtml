@model IEnumerable<Models.Navigation.NavigationViewModel>
<style>
    .securuty {
        width: 100%;
        height: auto;
        background-color: #fff;
        display: table;
    }

        .securuty dl {
            width: 100%;
            height: auto;
            margin: .5em 0;
        }

            .securuty dl dt {
                width: 100%;
                text-align: left;
                line-height: 2em;
                height: 2em;
                color: forestgreen;
            }

            .securuty dl dd {
                width: 100%;
                line-height: 2em;
                height: 2em;
                text-align: left;
            }

                .securuty dl dd ul {
                    list-style: none;
                    width: 100%;
                    height: auto;
                }

                    .securuty dl dd ul li:first-child {
                        font-weight: bold;
                        width:8em;
                        text-align:right;
                        color:royalblue;
                    }

                    .securuty dl dd ul li {
                        padding: 0 .5em;
                        float: left;
                        color:gray;
                    }
</style>
<div class="securuty">
    <div class="form-group">
        <label for="name">全选：</label>
        <input type="checkbox" onclick="selectAll(this, 'pids')" />
    </div>
    @foreach (var item in Model)
    {
        <dl>
            <dt>
                @item.name
                @if (item.hasPermission)
                {
                    <input type="checkbox" name="pids" checked="checked" value=@item.Id />
                }
                else
                {
                    <input type="checkbox" name="pids" value=@item.Id />
                }
            </dt>
            @if (item.SonMenu != null)
                {
                    foreach (var sonItem in item.SonMenu)
                    {
                    <dd>
                        <ul>
                            <li>
                                @sonItem.name
                                @if (sonItem.hasPermission)
                                {
                                    <input type="checkbox" name="pids" checked="checked" value=@sonItem.Id />
                                }
                                else
                                {
                                    <input type="checkbox" name="pids" value=@sonItem.Id />
                                }

                            </li>
                            @if (sonItem.SonMenu != null)
                            {
                                foreach (var subItem in sonItem.SonMenu)
                                {
                                    <li>
                                        @subItem.name
                                        @if (subItem.hasPermission)
                                        {
                                            <input type="checkbox" name="pids" checked="checked" value=@subItem.Id />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="pids" value=@subItem.Id />
                                        }

                                    </li>
                                }
                            }
                        </ul>

                    </dd>
                }
            }
        </dl>
    }
</div>
