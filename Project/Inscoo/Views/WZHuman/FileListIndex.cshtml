@model Models.WZFileSearchModel

@{
    ViewBag.Title = "人员清单上传";
}
@using (Html.BeginForm("UploadInsurants", "WZHuman", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="MasterId" value="@ViewBag.MasterId" />

    <div class="Search" style="">
        <dl style="width:100%">
            <dt>上传保险人员名单</dt>
            <dd>
                <a href="javascript:;" class="a-upload" style="margin-left:20px">
                    <input type="file" name="excel" id="excel" />+ 浏览
                </a>
                <span class="lab" style="height: 28px; line-height: 28px;"></span>
            </dd>
            <dt>备注</dt>
            <dd>
                <input type="text" name="memo" id="memo" placeholder="" class="form-control" />
            </dd>
            <dt>上传类型</dt>
            <dd>
                @Html.DropDownList("TypeList", ViewBag.TypeList as SelectList, new { @class = "form-control" })
            </dd>

            <dt></dt>
            <dd>
                <p> <input type="submit" value="上传名单" /></p>
            </dd>
            <dt></dt>
            <dd style="padding-left:1.5em;">
                @if (TempData["errorMes"] != null)
                {
                    if (TempData["errorMes"].ToString().Contains("成功"))
                    {
                        <span class="text-success" tyle="font-size:25px;">@TempData["errorMes"].ToString()</span>
                    }
                    else
                    {
                        <span class="text-danger" tyle="font-size:25px;">@TempData["errorMes"].ToString()</span>
                    }
                }
            </dd>

        </dl>
    </div>
}
@using (Ajax.BeginForm("FileListData", null, new AjaxOptions()
{
    HttpMethod = "post",
    UpdateTargetId = "dataGrid"
}, new { @id = "searchForm" }))
{

    <input type="hidden" name="MasterId" value="@ViewBag.MasterId" />
    <div class="Search " style="">
        <dl style="width:100%">
            <dt>
                上传人
            </dt>
            <dd>
                @Html.EditorFor(model => model.Author)
            </dd>
            <dt>
                文件名
            </dt>
            <dd>
                @Html.EditorFor(model => model.Name)
            </dd>
            <dt>上传截止日期</dt>
            <dd>
                <input type="text" name="CreateTime" id="CreateTime" value="@DateTime.Now.ToShortDateString()" class="inputDate" />
            </dd>
            <dt></dt>
            <dd>
                <p>
                    <input type="submit" value="查找" style="width:60%" />
                    @Html.ActionLink("返回列表", "ListIndex", new { }, new { @class = "btn btn-default", style = "width:30%;color:black;" })
                </p>
            </dd>
        </dl>

        <p class="clearfix"></p>
    </div>

    <div id="dataGrid">
        @Html.Action("FileListData", new { ViewBag.MasterId })
    </div>
}
@section Scripts {
    <script>
        jQuery(".aDeleteFile").click(function () {
            return confirm("确定删除？");

        });
    </script>
}